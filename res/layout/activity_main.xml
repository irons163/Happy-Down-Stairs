<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/mainmenu"
    tools:context=".MainActivity" >







    <Button
        android:id="@+id/bbutton1"
        android:layout_width="190dp"
        android:layout_height="105dp"
        android:layout_above="@+id/bbutton2"
        android:layout_marginLeft="35dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/game_start_btn" />
        <Button
        android:id="@+id/bbutton2"
        android:layout_width="120dp"
        android:layout_height="60dp"
        android:layout_above="@+id/bbutton3"
android:layout_marginLeft="70dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/game_rank_btn" />

        <Button
        android:id="@+id/bbutton4"
        android:layout_width="120dp"
        android:layout_height="60dp"
        android:layout_marginLeft="70dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="55dp"
        android:background="@drawable/game_quit_btn" />

        <Button
            android:id="@+id/bbutton3"
            android:layout_width="120dp"
            android:layout_height="60dp"
			android:layout_above="@+id/bbutton4"
android:layout_marginLeft="70dp"
			android:layout_marginBottom="5dp"
			android:visibility="gone"
            android:background="@drawable/game_about_btn" />

</RelativeLayout>